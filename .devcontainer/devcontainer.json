{
  "name": "PySpark + MySQL",
  "dockerComposeFile": "docker-compose.yml",
  "service": "workspace",
  "workspaceFolder": "/workspaces/pyspark-hands-on",
  "remoteUser": "root",
  "features": {
    "ghcr.io/devcontainers/features/java:latest": {"version": "17"}
  },
  "postCreateCommand": "apt-get update && apt-get install -y mariadb-client && pip install pyspark mysql-connector-python",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}
